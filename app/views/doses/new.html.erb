<div class="container">
  <div class="row">
    <div class="new-form">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.input :description %>
          <%= f.association :ingredient %>
          <%= f.association :cocktail %>
          <%= f.button :submit %>
        <% end %>
        <div class="back">
          <%= link_to 'Back', cocktail_path(@cocktail) %>
        </div>
      </div>
    </div>
  </div>
</div>
