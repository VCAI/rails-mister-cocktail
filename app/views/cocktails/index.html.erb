<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,50,50,0.1) 0%, rgba(0,36,61,0.3) 30%), url('https://images.unsplash.com/photo-1510577883271-e2f7ede4310f?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=c22ac1826cc0a01736f9f24b5dbde903&auto=format&fit=crop&w=1050&q=80');">
  <div class="container align-middle content">
    <div class="row">
      <div class="typed">
        <span id="banner-typed-text"></span>
      </div>
      <div class="cards">
        <% @cocktails.each do |cocktail| %>
          <div class="col-xs-12 col-sm-4">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
              url(<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill if cocktail.photo.present? %>)">
                <h5><strong><%= cocktail.name %><strong></h5>
                <%= link_to cocktail_path(cocktail) do %>
                  <i class="fas fa-glass-martini glass">Mix It</i>
                <% end %>
            </div>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>
