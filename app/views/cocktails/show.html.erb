 <i class="far fa-hand-point-left hand"><%= link_to 'Back', cocktails_path %></i>
<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
          <h2><%= @cocktail.name %></h2>
          <h5><strong>Ingredients:</strong></h5>
          <ol>
            <% @cocktail.doses.each do |dose| %>
            <li>
              <%= dose.ingredient.name %>  <%= dose.description %>
              <%= link_to '[ x ]', dose_path(dose), method: "delete"%>
            </li>
            <%end %>
          </ol>
          <%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail) %>
      </div>


      <div class="col-xs-12 col-sm-6">
        <div class="card show">
        </div>
      </div>
    </div>
  </div>
</div>

